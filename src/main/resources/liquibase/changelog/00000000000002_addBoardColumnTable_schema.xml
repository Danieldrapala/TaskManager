<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


    <changeSet id="00000000000003" author="dd">
        <createTable tableName="board">
            <column name="board_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(200)"/>
            <column name="default_column" type="bigint"/>
            <column name="closing_column" type="bigint"/>

        </createTable>
        <addAutoIncrement
                columnDataType="bigint"
                columnName="board_id"
                incrementBy="1"
                schemaName="taskmanager"
                startWith="1"
                tableName="board"/>
        <createTable tableName="column">
            <column name="column_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(30)">
            </column>
            <column name="priority" type="bigint"/>
            <column name="board_id" type="bigint"/>
        </createTable>
        <addAutoIncrement
                columnDataType="bigint"
                columnName="column_id"
                incrementBy="1"
                schemaName="taskmanager"
                startWith="1"
                tableName="column"/>
        <addForeignKeyConstraint baseColumnNames="column_id"
                                 baseTableName="task"
                                 constraintName="fk_column_assigned_id"
                                 referencedColumnNames="column_id"
                                 referencedTableName="column"/>

        <addForeignKeyConstraint baseColumnNames="board_id"
                                 baseTableName="column"
                                 constraintName="fk_board_id"
                                 referencedColumnNames="board_id"
                                 referencedTableName="board"/>
    </changeSet>
</databaseChangeLog>