<!--                                 referencedTableName="card"/>-->

        <addColumn tableName="card">
            <column name="default" type="boolean"/>
            <column name="completed_state" type="boolean"/>
        </addColumn>
        <addColumn tableName="task">
            <column name="assigned_to" type="bigint"/>
        </addColumn>
        <addForeignKeyConstraint baseColumnNames="assigned_to"
                                 baseTableName="task"
                                 constraintName="fk_assigned_to_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user"/>


        <createTable tableName="task_completed">
            <column name="history_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="task_id" type="bigint"/>
            <column name="completed_by" type="bigint"/>
            <column name="timestamp" type="timestamp"/>
        </createTable>
        <addAutoIncrement
                columnDataType="bigint"
                columnName="history_id"
                incrementBy="1"
                schemaName="taskmanager"
                startWith="1"
                tableName="task_completed"/>

<!--        <addForeignKeyConstraint baseColumnNames="completed_by"-->
<!--                                 baseTableName="task_completed"-->
<!--                                 constraintName="fk_task_completed_by_id"-->
