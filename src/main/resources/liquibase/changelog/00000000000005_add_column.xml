        <createTable tableName="task_drag_drop">
            <column name="history_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="task_id" type="bigint"/>
            <column name="previous_card_id" type="bigint"/>
            <column name="current_card_id" type="bigint"/>
            <column name="timestamp" type="timestamp"/>
        </createTable>
        <addAutoIncrement
                          columnDataType="bigint"
                          columnName="history_id"
                          incrementBy="1"
                          schemaName="taskmanager"
                          startWith="1"
                          tableName="task_drag_drop"/>
<!--        <addForeignKeyConstraint baseColumnNames="current_card_id"-->
<!--                                 baseTableName="task_drag_drop"-->
<!--                                 constraintName="fk_current_card_to_id"-->
<!--                                 referencedColumnNames="card_id"-->
