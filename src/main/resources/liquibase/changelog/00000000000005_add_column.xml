<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


    <changeSet id="00000000000005" author="dd">

        <createTable tableName="task_assignment">
            <column name="history_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="task_id" type="bigint">
            </column>
            <column name="assigned_to_id" type="bigint"/>
            <column name="timestamp" type="timestamp"/>
        </createTable>
        <addAutoIncrement
                          columnDataType="bigint"
                          columnName="history_id"
                          incrementBy="1"
                          schemaName="taskmanager"
                          startWith="1"
                          tableName="task_assignment"/>

