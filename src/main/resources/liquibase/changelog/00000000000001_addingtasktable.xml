<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


    <changeSet id="00000000000002" author="dd">
        <createTable tableName="task">
            <column name="task_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="bigint"/>
            <column name="description" type="varchar(1200)">
                <constraints nullable="false" />
            </column>
            <column name="date" type="date">
                <constraints nullable="false" />
            </column>
            <column name="isCompleted" type="boolean"/>
            <column name="creatorName" type="varchar(100)"/>
            <column name="owner_id" type="varchar(100)"/>

        </createTable>
        <addForeignKeyConstraint baseColumnNames="owner_id"
                                 baseTableName="task"
                                 constraintName="fk_owner_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user"/>
    </changeSet>

</databaseChangeLog>